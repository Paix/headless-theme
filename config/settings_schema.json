[
  {
    "name": "theme_info",
    "theme_name": "Shopify Headless Theme",
    "theme_author": "Instant Commerce",
    "theme_version": "3.0.0",
    "theme_documentation_url": "https://github.com/instantcommerce/shopify-headless-theme",
    "theme_support_url": "https://github.com/instantcommerce/shopify-headless-theme/issues"
  },
  {
    "name": "Storefront",
    "settings": [
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "text",
        "id": "storefront_hostname",
        "label": "Hostname",
        "info": "Without protocol, e.g. mydomain.com"
      },
      {
        "type": "textarea",
        "id": "custom_redirects",
        "label": "Custom redirects",
        "info": "Shopify path > Storefront path [Learn more](https://github.com/instantcommerce/shopify-headless-theme#custom-redirects)"
      },
      {
        "type": "checkbox",
        "id": "multipass_login",
        "default": false,
        "label": "Multipass login",
        "info": "If multipass is implemented the login will also redirect to your storefront [Learn more](https://shopify.dev/api/multipass)"
      },
      {
        "type": "checkbox",
        "id": "ga4_crossdomain",
        "default": false,
        "label": "GA4 cross-domain measurements",
        "info": "Required to collect accurate attribution data from customers getting redirected by this theme [Learn more](https://support.google.com/analytics/answer/10071811?hl=en). For this to work you will need to have gtag.js loaded in <head> as a blocking script."
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "colors_solid_button_labels",
        "default": "#FFFFFF",
        "label": "Solid button label",
        "info": "Used as foreground color on accent colors."
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "default": "#121212",
        "label": "Accent 1",
        "info": "Used for solid button background."
      },
      {
        "id": "gradient_accent_1",
        "type": "color_background",
        "label": "Accent 1 gradient"
      },
      {
        "type": "color",
        "id": "colors_accent_2",
        "default": "#334FB4",
        "label": "Accent 2"
      },
      {
        "id": "gradient_accent_2",
        "type": "color_background",
        "label": "Accent 2 gradient"
      },
      {
        "type": "header",
        "content": "Secondary colors"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#121212",
        "label": "Text",
        "info": "Used as foreground color on background colors."
      },
      {
        "type": "color",
        "id": "colors_outline_button_labels",
        "default": "#121212",
        "label": "Outline button",
        "info": "Also used text links."
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "default": "#FFFFFF",
        "label": "Background 1"
      },
      {
        "id": "gradient_background_1",
        "type": "color_background",
        "label": "Background 1 gradient"
      },
      {
        "type": "color",
        "id": "colors_background_2",
        "default": "#F3F3F3",
        "label": "Background 2"
      },
      {
        "id": "gradient_background_2",
        "type": "color_background",
        "label": "Background 2 gradient"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Vertical space between sections",
        "default": 0
      },
      {
        "type": "header",
        "content": "Grid"
      },
      {
        "type": "paragraph",
        "content": "Affects areas with a multicolumn layout."
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "Horizontal space"
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "Vertical space"
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Border"
      },
      {
        "type": "range",
        "id": "buttons_border_thickness",
        "min": 0,
        "max": 12,
        "step": 1,
        "unit": "px",
        "label": "Thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "buttons_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 100
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Corner radius",
        "default": 0
      },
      {
        "type": "header",
        "content": "Shadow"
      },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Horizontal offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Vertical offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Blur",
        "default": 0
      }
    ]
  },
  {
    "name": "Inputs",
    "settings": [
      {
        "type": "header",
        "content": "Border"
      },
      {
        "type": "range",
        "id": "inputs_border_thickness",
        "min": 0,
        "max": 12,
        "step": 1,
        "unit": "px",
        "label": "Thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "inputs_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 55
      },
      {
        "type": "range",
        "id": "inputs_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Corner radius",
        "default": 0
      },
      {
        "type": "header",
        "content": "Shadow"
      },
      {
        "type": "range",
        "id": "inputs_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "inputs_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Horizontal offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "inputs_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Vertical offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "inputs_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Blur",
        "default": 0
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
